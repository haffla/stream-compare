GET         /                     controllers.Application.index

POST        /login                controllers.AuthController.login
GET         /login                controllers.AuthController.loginPage
GET         /logout               controllers.AuthController.logout
GET         /register             controllers.AuthController.registerPage
POST        /register             controllers.AuthController.register

### Spotify
GET         /spotify/login        controllers.SpotifyController.loginPage
GET         /callback             controllers.SpotifyController.callback

### iTunes
GET         /itunes               controllers.ItunesController.index
POST        /itunes               controllers.ItunesController.itunes

### User management
GET         /users                controllers.UserController.list

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file         controllers.Assets.versioned(path="/public", file: Asset)
